alignment top_right
background no

use_xft yes
xftfont Meslo LG L:size=8

update_interval 1.0
double_buffer yes

border_width 0
cpu_avg_samples 2

default_color white
default_outline_color white
default_shade_color white

draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no

gap_x 32
gap_y 32
maximum_width 386

net_avg_samples 2
out_to_console no
out_to_stderr no
extra_newline no

own_window yes
own_window_class Conky
own_window_type override
own_window_transparent yes

stippled_borders 0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
$nodename @ $sysname $kernel | $machine | $freq_g GHz
$hr

${color darkgrey}Date & Time:$color ${time %a %d %b %R}
${color darkgrey}Uptime:$color $uptime
${color darkgrey}Processes:$color $processes

${color darkgrey}Drive Usage:
    ${color}/ | ${fs_used /} / ${fs_size /}
    ${fs_bar 4 /}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

    ${color}/home | ${fs_used /home} / ${fs_size /home}
    ${fs_bar 4 /home}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

    ${color}/vms | ${fs_used /vms} / ${fs_size /vms}
    ${fs_bar 4 /vms}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

    ${color}/home/petervaro/downloads | ${fs_used /home/petervaro/downloads} / ${fs_size /home/petervaro/downloads}
    ${fs_bar 4 /home/petervaro/downloads}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

    ${color}/backup/home | ${fs_used /backup/home} / ${fs_size /backup/home}
    ${fs_bar 4 /backup/home}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

    ${color}/backup/vms | ${fs_used /backup/vms} / ${fs_size /backup/vms}
    ${fs_bar 4 /backup/vms}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}

${color darkgrey}RAM Usage:
    $color$mem / $memmax | $memperc%
    ${membar 4}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}
    ${color darkgrey}${memgraph FFFFFF FFFFFF}

${color darkgrey}CPU Usage:
    $color$cpu%
    ${cpubar 4}
    ${voffset -17}${color darkgrey}${cpubar cpu128 4}
    ${color darkgrey}${cpugraph cpu0 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu1 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu2 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu3 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu4 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu5 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu6 FFFFFF FFFFFF}
    ${color darkgrey}${cpugraph cpu7 FFFFFF FFFFFF}
#
# ${color darkgrey}GPU Usage:
#     ${color darkgrey}Temperature:$color ${nvidia temp} C
#     ${color darkgrey}Processor:$color ${nvidia gpufreq} MHz
#     ${color darkgrey}Memory:$color ${nvidia memfreq} MHz

${color darkgrey}Networking:
    ${color darkgrey}Down: $color${downspeedf wlp6s0}k/s ${alignr}${totaldown wlp6s0} total
    ${color darkgrey}${downspeedgraph wlp6s0 FFFFFF FFFFFF}
    ${color darkgrey}Up: $color${upspeedf wlp6s0}k/s ${alignr}${totalup wlp6s0} total
    ${color darkgrey}${upspeedgraph wlp6s0 FFFFFF FFFFFF}

${color darkgrey}Process Name:          PID   CPU%   MEM%
    $color${top name 1} ${color darkgray}${top pid 1} ${top cpu 1} ${top mem 1}
    $color${top name 2} ${color darkgray}${top pid 2} ${top cpu 2} ${top mem 2}
    $color${top name 3} ${color darkgray}${top pid 3} ${top cpu 3} ${top mem 3}
    $color${top name 4} ${color darkgray}${top pid 4} ${top cpu 4} ${top mem 4}
    $color${top name 5} ${color darkgray}${top pid 5} ${top cpu 5} ${top mem 5}
    $color${top name 6} ${color darkgray}${top pid 6} ${top cpu 6} ${top mem 6}
    $color${top name 7} ${color darkgray}${top pid 7} ${top cpu 7} ${top mem 7}
    $color${top name 8} ${color darkgray}${top pid 8} ${top cpu 8} ${top mem 8}
    $color${top name 9} ${color darkgray}${top pid 9} ${top cpu 9} ${top mem 9}

${color darkgrey}Available updates: $color${execpi 3600 checkupdates | wc -l}
