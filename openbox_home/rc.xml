    <keybind key="W-KP_Subtract">
        <action name="ToggleFullscreen"/>
    </keybind>

    <!-- Keybindings for move window to the other monitor -->
    <keybind key="W-KP_0">
        <action name="UnmaximizeFull"/>
        <action name="If">
            <query target="focus">
                <monitor>1</monitor>
            </query>
            <then>
                <action name="MoveResizeTo">
                    <monitor>2</monitor>
                </action>
            </then>
            <else>
                <action name="MoveResizeTo">
                    <monitor>1</monitor>
                </action>
            </else>
        </action>
    </keybind>

